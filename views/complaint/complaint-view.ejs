<!-- CONSULTATION DETAILS -->
<div class="container">
    <div class="mt-3">
        <%- include ("../partials/messages"); %>
    </div>
    <div class="m-3 border rounded bg-white shadow" style="padding-left: 20px; padding-right: 20px;">
        <!-- Info for merit test -->
        <section class="consult-view container mt-3">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-complaint-tab" data-bs-toggle="pill"
                        data-bs-target="#pills-complaint" type="button" role="tab" aria-controls="pills-complaint"
                        aria-selected="true">Complaint Document</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-meeting-tab" data-bs-toggle="pill"
                        data-bs-target="#pills-meeting" type="button" role="tab" aria-controls="pills-meeting"
                        aria-selected="false">Meeting Details</button>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-complaint" role="tabpanel"
                    aria-labelledby="pills-complaint-tab">
                    <!-- This is the complaint document -->
                    <div id="complaintForm">
                        <div class="d-flex justify-content-between align-items-center">
                            <h1>Impormasyon tungkol sa Kaso</h1>
                            <button id="editButton" onclick="showModal('<%- result._id %>')" value="<%- result._id %>"
                                class="btn btn-primary">EDIT</button>
                        </div>
                        <hr>
                        <div class="mb-3">
                            <label name="case_id" for="case_no" class="form-label">#Case ID:</label>
                            <span class="badge bg-dark rounded-pill">
                                <%- result._id %>
                            </span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Maikling deskripsyon ng legal na problema</label>
                            <input type="text" class="form-control" value="<%- result.legal_title %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Pangalan ng Kliyente</label>
                            <input type="text" class="form-control" value="<%- result.client_id.user_fname %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="case_facts" class="form-label">Kwento/Detalye
                                ng Legal na Problema</label>
                            <textarea class="form-control" class="form-control" rows="3"
                                readonly><%- result.case_facts %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="adverse_party" class="form-label">Kalabang Partido</label>
                            <input type="text" class="form-control" readonly value="<%- result.adverse_party %>">
                        </div>
                        <div class="mb-3">
                            <label for="case_objectives" class="form-label">Mga layunin na
                                gustong makamit sa legal na problema</label>
                            <textarea class="form-control" class="form-control" rows="3"
                                readonly><%- result.case_objectives %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="lawyer_details" class="form-label">Pangalan ng abogado</label>
                            <input type="text" class="form-control" readonly value="<%- result.lawyer_id.user_fname %>">
                        </div>
                        <div class="mb-5">
                            <label for="client_questions" class="form-label">Mga
                                katanungan sa abogado</label>
                            <textarea class="form-control" class="form-control" rows="3"
                                readonly><%- result.client_questions %></textarea>
                        </div>
                        <caption>Mga dokumentong makakatulong sa kaso</caption>
                        <% for( let index = 0; index < result.case_files.length; index++ ) { %>
                        <div class="mb-3">
                            <embed src="/uploads/evidences/<%- result.case_files[index] %>" type="application/pdf"
                                width="100%" height="600px" />
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-meeting" role="tabpanel" aria-labelledby="pills-meeting-tab">
                    <!-- This is the Details Content -->

                    <!-- THIS IS THE PENDING CASE -->
                    <% if (user_type=="lawyer" && a_type=="pending" ) { %>
                    <div id="pendingCase">
                        <hr>
                        <label for="buttons" class="form-label" style="font-size:x-large"><b>Tanggapin ang
                                request?</b></label>
                        <div class="mb-3 mt-2 d-flex">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal"
                                data-bs-target="#staticBackdrop">
                                Accept
                            </button>
                            <form action="/form/complaints/reject?_method=PATCH" method="POST">
                                <input name="id" type="text" value="<%- result._id %>" hidden>
                                <input name="case_status" type="text" value="denied" hidden>
                                <button type="submit" class="btn btn-danger btn-lg">Reject</button>
                            </form>
                        </div>

                        <!-- Modal -->
                        <form action="/form/complaints/pending?_method=PATCH" method="POST">
                            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Confirm Accept</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input name="id" type="text" value="<%- result._id %>" hidden>
                                            <input name="case_status" type="text" value="prelim meeting" hidden>
                                            <label for="appointment_date">Set appointment date</label>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="appointment_date"><i
                                                        class="fas fa-calendar"></i></span>
                                                <input name="appointment_date" type="datetime-local"
                                                    class="form-control" aria-label="Appointment Date"
                                                    aria-describedby="Appointment Date" required>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Accept</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <% } else if (a_type=="prelim meeting" ){ %>
                    <!-- PRELIMINARY MEETING CASE -->
                    <div id="prelimMeeting">
                        <p>Wait for the meeting schedule</p>
                        <% if (user_type == "lawyer") { %>
                        <p>Click update transaction to enter the first meeting details</p>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary btn-lg mb-3" data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop">
                            Update Transaction
                        </button>

                        <!-- Modal -->
                        <form action="/form/complaints/ongoing/<%- result._id %>" method="POST">
                            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Confirm Accept</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label class="form-label">Buod ng mga napagusapan</label>
                                                <textarea name="summary" type="text" class="form-control" id="summary"
                                                    required></textarea>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Mga rekomendasyon para sa kliyente</label>
                                                <textarea name="recommendations" type="text" class="form-control"
                                                    id="recommendations" required></textarea>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Video link ng meeting</label>
                                                <textarea name="video_link" type="text" class="form-control"
                                                    id="video_link" required></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Accept</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <% } %>
                    </div>
                    <% } else if (a_type == "in progress") { %>
                    <!-- CASE IN PROGRESS -->
                    <div id="inProgress">
                        <h1>Detalye ng napagmeetingan</h1>
                        <hr>
                        <%- include("../partials/complaint-solutions") %>

                        <% if (user_type == "lawyer") { %>
                        <!-- Modal Button -->
                        <button type="button" class="btn btn-primary btn-lg mb-3" data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop">
                            Update Transaction
                        </button>

                        <!-- Modal -->
                        <form action="/form/complaints/ongoing/<%- result._id %>" method="POST">
                            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Confirm Accept</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label class="form-label">Buod ng mga napagusapan</label>
                                                <textarea name="summary" type="text" class="form-control" id="summary"
                                                    required></textarea>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Mga rekomendasyon para sa kliyente</label>
                                                <textarea name="recommendations" type="text" class="form-control"
                                                    id="recommendations" required></textarea>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Video link ng meeting</label>
                                                <textarea name="video_link" type="text" class="form-control"
                                                    id="video_link" required></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Accept</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <% } else if (user_type == "client") { %>
                        <div class="d-flex justify-content-between">
                            <form action="/form/complaints/complete?_method=PATCH" method="POST">
                                <input name="id" value="<%- result._id %>" hidden>
                                <button type="submit" class="btn btn-success btn-lg m-3"><i
                                        class="fas fa-thumbs-up"></i> Mark as Resolved</button>
                            </form>

                            <button type="button" class="btn btn-primary m-3 btn-lg" data-bs-toggle="modal"
                                data-bs-target="#rescheduleModal"><i class="far fa-calendar"></i>
                                Reschedule</button>
                        </div>

                        <form action="">
                            <div class="modal fade" id="rescheduleModal" tabindex="-1"
                                aria-labelledby="rescheduleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="rescheduleModalLabel">Modal title</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            ...
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <% } %>
                    </div>
                    <% } else if (a_type == "completed") { %>
                    <!-- COMPLETED CASE -->
                    <div id="completedCase">
                        <h1>Case Completed [CLOSED]</h1>
                        <hr>
                        <%- include("../partials/complaint-solutions") %>
                    </div>
                    <!-- NO DATA RECORDED -->
                    <% } else { %>
                    <div id="noData">
                        <h3 class="m-5">No data recorded yet</h3>
                    </div>
                    <% } %>
                </div>
            </div>
            <!-- Modal -->
            <form action="/form/complaints/edit/<%- result._id %>?_method=PATCH" method="POST"
                enctype="multipart/form-data">
                <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel">Impormasyon tungkol sa Kaso</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="complaintForm">
                                    <div class="mb-3">
                                        <label for="case_no" class="form-label">#Case ID:</label>
                                        <input name="case_id" type="text" class="form-control" id="case_id" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Maikling deskripsyon ng legal na problema</label>
                                        <input name="legal_title" type="text" class="form-control" id="legal_title">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Pangalan ng Kliyente</label>
                                        <input type="text" class="form-control" id="client_name" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label for="case_facts" class="form-label">Kwento/Detalye
                                            ng Legal na Problema</label>
                                        <textarea name="case_facts" class="form-control" id="case_facts"
                                            rows="3"></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="adverse_party" class="form-label">Kalabang Partido</label>
                                        <input name="adverse_party" type="text" class="form-control" id="adverse_party">
                                    </div>
                                    <div class="mb-3">
                                        <label for="case_objectives" class="form-label">Mga layunin na
                                            gustong makamit sa legal na problema</label>
                                        <textarea name="case_objectives" class="form-control" id="case_objectives"
                                            rows="3"></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="lawyer_details" class="form-label">Pangalan ng abogado</label>
                                        <input type="text" class="form-control" id="lawyer_details" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label for="client_questions" class="form-label">Mga
                                            katanungan sa abogado</label>
                                        <textarea name="client_questions" class="form-control" id="client_questions"
                                            rows="3"></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="case_files" class="form-label">Mga dokumentong makakatulong sa
                                            kaso</label>
                                        <input name="case_files" id="case_files" class="form-control" type="file"
                                            multiple="multiple" accept="application/pdf">
                                    </div>
                                    <div id="filename_append">
                                        <caption>Selected files: </caption>
                                        <ul id="file_list">
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

<script>
    function showModal(id) {
        let url = `http://localhost:3000/form/complaints/edit/${id}`
        $.ajax({
            type: "GET",
            url: url,
            dataType: 'json',
            success: (data) => {
                $("#editModal .modal-body #case_id").val(data._id)
                $("#editModal .modal-body #legal_title").val(data.legal_title)
                $("#editModal .modal-body #client_name").val(data.client_id.user_fname)
                $("#editModal .modal-body #case_facts").val(data.case_facts)
                $("#editModal .modal-body #adverse_party").val(data.adverse_party)
                $("#editModal .modal-body #case_objectives").val(data.case_objectives)
                $("#editModal .modal-body #lawyer_details").val(data.lawyer_id.user_fname)
                $("#editModal .modal-body #client_questions").val(data.client_questions)
                $("#editModal").modal('show');
            }
        })
    }

    $("#case_files").change(function () {
        let files = $(this)[0].files
        let file_item = ""
        for (let i = 0; i < files.length; i++) {
            file_item += `<li class="file-item"> ${files[i].name} </li>`;
        }
        $("#file_list").html(file_item)
    });
</script>