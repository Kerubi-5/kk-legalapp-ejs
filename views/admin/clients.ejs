<!--Account Authentication Content-->
<div id="authenticate-content" class="mt-5 pt-3 tab-content" role="tabpanel">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 fw-bold fs-3">
                Clients
            </div>
        </div>
        <br>
        <!--Table for Account Authentication-->
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">UID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% for( let index = 0; index < clientDocs.length; index++ ) { %>
                <tr>
                    <th scope="row"><%- index+1 %></th>
                    <td><%- clientDocs[index].user_fname %> </td>
                    <td><%- clientDocs[index].user_lname %> </td>
                    <td><button type="button" class="btn btn-primary btn-sm"
                            onclick="showModal('<%- clientDocs[index]._id %>')">Review </button></td>
                </tr>
                <% } %>
            </tbody>
        </table>

    </div>
</div>
<!--End of Account Authentication Content-->

<!--Modal content-->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">ACCOUNT INFORMATION</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="text-align: justify;">
            </div>
            <div class="modal-footer">
                <a id="lock-btn" type="button" class="btn btn-danger"><b>Lock Account</b></a>
            </div>
        </div>
    </div>
</div>
<!--end of Modal Content-->

<script>
    function showModal(data) {
        $("#myModal .modal-body").load(`/admin/accounts/${data}`, () => {
            $("#myModal").modal('show')
            $("#lock-btn").attr("href", `/admin/accounts/lock/${data}`)
        })
    }
</script>